@model AddProductViewModel
@{
    ViewData["Title"] = "Add Product";
    var stores = ViewBag.Stores;
}

<div class="container mt-5">
    <h2>Add Product</h2>
    <form asp-action="AddProduct" method="post">
        <div class="mb-3">
            <label asp-for="Product.PartitionKey" class="form-label">Partition Key</label>
            <input asp-for="Product.PartitionKey" class="form-control" />
            <span asp-validation-for="Product.PartitionKey" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.RowKey" class="form-label">Row Key</label>
            <input asp-for="Product.RowKey" class="form-control" />
            <span asp-validation-for="Product.RowKey" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Name" class="form-label">Product Name</label>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Price" class="form-label">Price</label>
            <input asp-for="Product.Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Stock" class="form-label">Stock Quantity</label>
            <input asp-for="Product.Stock" class="form-control" type="number" />
            <span asp-validation-for="Product.Stock" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Color" class="form-label">Color</label>
            <input asp-for="Product.Color" class="form-control" />
            <span asp-validation-for="Product.Color" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="storeKey" class="form-label">Select Store</label>
            <select class="form-control" id="storeKey" name="StoreKey" required>
                <option value="">Select a Store</option>
                @foreach (var store in stores)
                {
                    <option value="@store.RowKey">@store.CountryName - @store.CityName - @store.Address - @store.StoreName</option>
                }
            </select>
        </div>
        <input type="hidden" asp-for="Product.StoreKey" id="hiddenStoreKey" />
        <button type="submit" class="btn btn-primary">Add Product</button>
    </form>

</div>
<script>
    const storeKeySelect = document.getElementById('storeKey');
    const hiddenStoreKeyInput = document.getElementById('hiddenStoreKey');

    storeKeySelect.addEventListener('change', function () {
        hiddenStoreKeyInput.value = storeKeySelect.value;
    });
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>